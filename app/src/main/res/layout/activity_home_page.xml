<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.batch2014.phonecontacts.HomePageActivity">

    <TextView
        android:id="@+id/lable_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Phone Contact"
        android:textColor="@android:color/white"
        android:textSize="16pt" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lable_id"
        android:layout_marginTop="30dp"
        android:hint="Name "
        android:inputType="text" />

    <EditText
        android:id="@+id/et_mobile_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name"
        android:hint="Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_home_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_mobile_phone"
        android:hint="Home Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_work_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_home_phone"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_work_email"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
        android:text="Add Contact"
        android:textColor="@android:color/white"
        android:textSize="12pt" />

    <Button
        android:id="@+id/btn_contacts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_light"
        android:text="View Contacts"
        android:textColor="@android:color/white"
        android:textSize="12pt" />

</RelativeLayout>